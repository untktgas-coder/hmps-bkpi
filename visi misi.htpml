    <section id="visi-misi" class="py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-emerald-900">Visi & Misi </h2>
                <div class="w-24 h-1 bg-emerald-500 mx-auto mt-4"></div>
            </div>
            
            <div class="grid lg:grid-cols-2 gap-12">
                <div class="bg-emerald-50 p-8 rounded-3xl border border-emerald-100 shadow-sm">
